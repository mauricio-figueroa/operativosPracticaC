#include <stdio.h>
#include <stdlib.h>

int main(void) {


	int *r = malloc(sizeof(int));
	*r = 1;
	printf("r = %d\n", r);
	printf("&r = %p\n", &r);
	printf("*r =%p",*r);
	return 0;

}
