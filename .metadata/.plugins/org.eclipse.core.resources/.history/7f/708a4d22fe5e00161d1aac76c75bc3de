#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int n = 3;
	int *p = &n;

	printf("Posicion de memoria de p: %i", &p);
	printf("Valor apuntado por p: %p", p);

	int *r = malloc(sizeof(int));
	*r = 1;
	printf("r = %d\n", r);
	printf("&r = %p\n", &r);
	return 0;

}
